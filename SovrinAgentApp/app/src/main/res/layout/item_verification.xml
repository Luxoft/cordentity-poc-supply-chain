<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- ListView ignores element margins, so workaround with FrameLayout and partial margins -->
    <androidx.cardview.widget.CardView
        style="@style/Card"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin"
        android:layout_marginBottom="@dimen/card_margin_half"
        android:layout_marginTop="@dimen/card_margin_half">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">

            <TextView
                android:id="@+id/verifierName"
                style="@style/Text"
                android:textColor="@color/gray_dark"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="~Cherry Hill Medical Center"/>

            <TextView
                android:id="@+id/verificationDate"
                style="@style/Text"
                android:textColor="@color/gray_dark"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="~04 Jan 2020"/>

            <!-- INFO TAGS -->

            <TextView
                android:id="@+id/verifierAddressTag"
                style="@style/Text"
                android:textColor="@color/gray_light"
                android:text="Address:"
                android:layout_marginTop="4dp"
                android:layout_marginStart="14dp"
                app:layout_constraintTop_toBottomOf="@id/verifierName"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/verifierContactPhoneTag"
                style="@style/Text"
                android:textColor="@color/gray_light"
                android:text="Phone:"
                app:layout_constraintTop_toBottomOf="@id/verifierAddressTag"
                app:layout_constraintStart_toStartOf="@id/verifierAddressTag"/>

            <TextView
                android:id="@+id/provedDataTag"
                style="@style/Text"
                android:textColor="@color/gray_light"
                android:text="Provided Attributes:"
                app:layout_constraintTop_toBottomOf="@id/verifierContactPhoneTag"
                app:layout_constraintStart_toStartOf="@id/verifierAddressTag"/>

            <!-- INFO VALUES -->

            <TextView
                android:id="@+id/verifierAddress"
                style="@style/Text"
                android:textColor="@color/gray_dark"
                app:layout_constraintBaseline_toBaselineOf="@id/verifierAddressTag"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="~511 16th Ave, Seattle, WA 98122"/>

            <TextView
                android:id="@+id/verifierContactPhone"
                style="@style/Text"
                android:textColor="@color/gray_dark"
                app:layout_constraintBaseline_toBaselineOf="@id/verifierContactPhoneTag"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="~(206) 320-2000"/>

            <TextView
                android:id="@+id/provedData"
                style="@style/Text"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/text_small"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/provedDataTag"
                app:layout_constraintStart_toStartOf="@id/verifierAddressTag"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="~Full name, Age, Insurance company name, Insurance company name, Insurance company name"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>
