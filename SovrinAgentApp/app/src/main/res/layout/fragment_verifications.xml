<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/scanVerificationRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/present_icon"
        android:backgroundTint="#E8F9F6"
        app:backgroundTint="#00FFFFFF"
        android:layout_margin="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
        android:id="@+id/tipPreseentCredentioal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="25dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/message_icon"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_title"
            android:layout_marginLeft="10dp"
            android:text="@string/tip_to_present_credential"/>
    </LinearLayout>

    <ListView
        android:id="@+id/verificationHistory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/card_margin_half"
        android:divider="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/tipPreseentCredentioal"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_verification"/>

</androidx.constraintlayout.widget.ConstraintLayout>