<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/scanVerificationRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/present_icon"
        android:backgroundTint="#E8F9F6"
        app:backgroundTint="#00FFFFFF"
        android:layout_margin="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ListView
        android:id="@+id/verificationHistory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/card_margin_half"
        android:divider="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/scanVerificationRequest"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_verification"/>

</androidx.constraintlayout.widget.ConstraintLayout>