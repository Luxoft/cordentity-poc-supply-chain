<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main">

    <Button
        android:id="@+id/scanVerificationRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Provide Credentials"
        android:background="@drawable/gradient"

        android:drawableEnd="@drawable/ic_qr_code"
        android:drawablePadding="20dp"
        android:gravity="start|center_vertical"
        android:paddingEnd="25dp"
        android:paddingStart="37dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ListView
        android:id="@+id/verificationHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/scanVerificationRequest"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/item_verification"/>

</androidx.constraintlayout.widget.ConstraintLayout>