<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingStart="@dimen/element_paddingStart_level1"
    android:paddingTop="12dp"
    android:paddingEnd="25dp"
    android:paddingBottom="12dp">

    <TextView
        android:id="@+id/tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextProfile"
        tools:text = "Personal Digital ID"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
    />
    
    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextProfile"
        tools:text = "Mark Rubenshtein"
        app:layout_constraintTop_toBottomOf="@id/tittle"
        app:layout_constraintStart_toStartOf="parent"
    />
    
    <TextView
        android:id="@+id/verified_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextProfile"
        android:text="@string/verified_by"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
    />
    
    <TextView
        android:id="@+id/verifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextProfile"
        tools:text = "Providence"
        app:layout_constraintTop_toBottomOf="@id/verified_by"
        app:layout_constraintEnd_toEndOf="parent"
    />
    
</androidx.constraintlayout.widget.ConstraintLayout>

