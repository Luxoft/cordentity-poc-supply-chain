<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/scanNewCredential"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cross_icon"
            android:backgroundTint="#E8F9F6"
            app:backgroundTint="#00FFFFFF"
            android:layout_margin="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
        />

        <LinearLayout
            android:id="@+id/tipGetCredential"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="25dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/message_icon"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:fontFamily="sans-serif-medium"
                android:textFontWeight="500"
                android:letterSpacing="0.05"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:text="@string/tip_to_get_credential"/>
        </LinearLayout>


        <TextView
                android:id="@+id/walletStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Text"
                android:textSize="14dp"
                android:textFontWeight="500"
                android:fontFamily="sans-serif-medium"
                android:visibility="gone"
                tools:text="@string/you_have_d_verified_credentials"
                android:layout_marginTop="@dimen/card_margin"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                app:layout_constraintTop_toBottomOf="@id/tipGetCredential"
                app:layout_constraintStart_toStartOf="parent"
                tools:visibility="visible"/>

        <ExpandableListView
                android:id="@+id/credentialList"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/card_margin_half"
                android:divider="@android:color/transparent"
                android:groupIndicator="@android:color/transparent"
                app:layout_constraintTop_toBottomOf="@id/walletStatus"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:listitem="@layout/item_credentilal_collapsed"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>