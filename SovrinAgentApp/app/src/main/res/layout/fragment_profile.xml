<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/scanNewCredential"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_black_24dp"
            android:backgroundTint="#E8F9F6"
            app:backgroundTint="#00FFFFFF"
            android:layout_margin="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
        />

        <LinearLayout
            android:id="@+id/tipGetCredential"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="25dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/message_icon"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_title"
                android:layout_marginLeft="10dp"
                android:text="@string/tip_to_get_credential"/>
        </LinearLayout>


        <TextView
                android:id="@+id/walletStatus"
                app:layout_constraintTop_toBottomOf="@id/tipGetCredential"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/Text"
                android:paddingStart="@dimen/element_paddingStart_level1"
                android:paddingEnd="25dp"
                android:paddingTop="21dp"
                android:paddingBottom="26dp"
                android:textColor="#454343"
                android:textSize="@dimen/text_title"
                android:visibility="gone"
                tools:text="@string/you_have_d_verified_credentials"
                tools:visibility="visible"/>

        <ExpandableListView
                android:id="@+id/credentialList"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/walletStatus"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="8dp"
                tools:listitem="@layout/item_credentilal"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>